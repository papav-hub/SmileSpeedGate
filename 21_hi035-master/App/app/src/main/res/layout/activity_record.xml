<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".notice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#24c977"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:background="#24c977"
            android:fontFamily="@font/han_sans_neo_regular"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="30dp"
            android:id="@+id/btnRtnRecord"/>
        <TextView
            android:text="나의 동선"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/han_sans_neo_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="나의 타임라인"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/han_sans_neo_regular" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setDate"
            android:textSize="25dp"
            android:text="2021년 6월 22일"
            android:textColor="@color/black"
            android:fontFamily="@font/han_sans_neo_regular" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/han_sans_neo_regular" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/solid_button_gray"
            android:id="@+id/ListViewRecord"/>

    </LinearLayout>

</LinearLayout>